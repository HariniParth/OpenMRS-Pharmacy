<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>pharmacy</id>
	<name>Pharmacy</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.pharmacy</package>
	<author>${module-author}</author>
	<description>
		helps to view and dispense drug orders
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/pharmacy/update.rdf</updateURL>
	<require_version>1.11.2</require_version>
	<!-- / Module Properties -->

	<require_modules>
		<require_module version="3.2">
			org.openmrs.module.uiframework
		</require_module>
                <require_module version="${drugordersersion}">
			org.openmrs.module.drugorders
		</require_module>
	</require_modules>

	
	<!-- Module Activator -->
	<activator>org.openmrs.module.pharmacy.PharmacyActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.pharmacy.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>

        Pharmacy.hbm.xml
				
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with pharmacy. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

